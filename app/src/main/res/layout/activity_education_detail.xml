<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <?xml version="1.0" encoding="utf-8"?>
    <android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title of the article/video -->
            <TextView
                android:id="@+id/education_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detailed Title of the Article/Video"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp"
                android:textStyle="bold" />

            <!-- Image/Thumbnail for the article/video -->
            <ImageView
                android:id="@+id/education_detail_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/sample"
                android:contentDescription="Article/Video Thumbnail"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"/>

            <!-- Detailed description or content of the article/video -->
            <TextView
                android:id="@+id/education_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full description or content of the article/video goes here."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:justificationMode="inter_word"/>

            <!-- External Link or Button to further reading or video -->
            <Button
                android:id="@+id/education_detail_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read More / Watch Video"
                android:textColor="@color/white"
                android:backgroundTint="@color/blueBackground"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </android.widget.ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>